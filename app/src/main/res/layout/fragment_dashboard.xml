    <TextView
        android:id="@+id/my_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/my_field"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rv_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutDashboard" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_field"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="0dp"
        android:gravity="center"
        android:background="@drawable/background_roundedcorner"
        android:layout_marginStart="8dp"
        android:text="@string/add_field"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/my_field"
        app:layout_constraintStart_toEndOf="@+id/my_field"
        app:layout_constraintTop_toTopOf="@id/my_field" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_field"
